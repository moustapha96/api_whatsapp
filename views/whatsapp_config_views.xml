<?xml version="1.0" encoding="utf-8"?>
<!-- whatsapp_business_api/views/whatsapp_config_views.xml -->
<odoo>
    <!-- Menu Principal WhatsApp -->
    <menuitem id="menu_whatsapp_root"
              name="WhatsApp"
              sequence="100"/>

    <record id="action_whatsapp_config" model="ir.actions.act_window">
        <field name="name">Configuration WhatsApp</field>
        <field name="res_model">whatsapp.config</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_whatsapp_config"
              name="Configuration"
              parent="menu_whatsapp_root"
              action="action_whatsapp_config"
              sequence="1"/>

    <!-- Formulaire Config -->
    <record id="view_whatsapp_config_form" model="ir.ui.view">
        <field name="name">whatsapp.config.form</field>
        <field name="model">whatsapp.config</field>
        <field name="arch" type="xml">
            <form string="Configuration WhatsApp Business">
                <header>
                    <button name="action_verify_parameters" 
                            type="object" 
                            string="Vérifier les paramètres"
                            class="oe_highlight"
                            icon="fa-check-circle"/>
                    <button name="action_sync_templates" 
                            type="object" 
                            string="Synchroniser les templates"
                            icon="fa-refresh"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <button name="action_fetch_sent_messages" 
                                    type="object" 
                                    string="Messages envoyés"
                                    icon="fa-paper-plane"
                                    class="btn-secondary"/>
                            <button name="action_fetch_failed_messages" 
                                    type="object" 
                                    string="Messages non envoyés"
                                    icon="fa-exclamation-triangle"
                                    class="btn-secondary"/>
                            <button name="action_fetch_incoming_messages" 
                                    type="object" 
                                    string="Messages entrants"
                                    icon="fa-inbox"
                                    class="btn-secondary"/>
                            <button name="action_fetch_message_statuses" 
                                    type="object" 
                                    string="Vérifier les statuts"
                                    icon="fa-info-circle"
                                    class="btn-secondary"/>
                            <button name="action_diagnose_message_delivery" 
                                    type="object" 
                                    string="Diagnostiquer les envois"
                                    icon="fa-stethoscope"
                                    class="btn-warning"/>
                        </group>
                    </group>
                    <group string="Identifiants Meta">
                        <field name="facebook_app_id"/>
                        <field name="facebook_app_secret"/>
                        <field name="whatsapp_business_account_id"/>
                        <field name="phone_number_id"/>
                        <field name="access_token" password="True"/>
                    </group>
                    <group string="Webhook">
                        <field name="verify_token"/>
                        <field name="webhook_url"/>
                    </group>
                    <group string="Paramètres d'envoi automatique">
                        <field name="auto_send_order_creation" 
                               help="Si activé, un message WhatsApp sera envoyé automatiquement lors de la création d'une commande"/>
                        <field name="auto_send_unpaid_invoices" 
                               help="Si activé, un message WhatsApp sera envoyé automatiquement pour les factures impayées"/>
                        <field name="unpaid_invoice_days" 
                               attrs="{'required': [('auto_send_unpaid_invoices', '=', True)], 'invisible': [('auto_send_unpaid_invoices', '=', False)]}"
                               help="Nombre de jours après l'échéance avant d'envoyer un rappel pour les factures impayées"/>
                    </group>
                    <group string="Affichage des boutons WhatsApp">
                        <field name="show_button_in_invoice" 
                               help="Si activé, le bouton 'Envoyer facture par WhatsApp' sera visible dans la vue formulaire des factures"/>
                        <field name="show_button_in_order" 
                               help="Si activé, le bouton WhatsApp sera visible dans la vue formulaire des commandes"/>
                        <field name="show_button_in_partner" 
                               help="Si activé, le bouton 'Envoyer WhatsApp' sera visible dans la vue formulaire des partenaires"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Liste Config -->
    <record id="view_whatsapp_config_tree" model="ir.ui.view">
        <field name="name">whatsapp.config.tree</field>
        <field name="model">whatsapp.config</field>
        <field name="arch" type="xml">
            <tree string="Configurations WhatsApp">
                <field name="name"/>
                <field name="phone_number_id"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>
</odoo>
