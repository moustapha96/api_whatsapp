<?xml version="1.0" encoding="utf-8"?>
<!-- whatsapp_business_api/views/whatsapp_message_views.xml -->
<odoo>
    <record id="action_whatsapp_message" model="ir.actions.act_window">
        <field name="name">Messages WhatsApp</field>
        <field name="res_model">whatsapp.message</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_whatsapp_message"
              name="Messages"
              parent="menu_whatsapp_root"
              action="action_whatsapp_message"
              sequence="7"/>

    <record id="view_whatsapp_message_tree" model="ir.ui.view">
        <field name="name">whatsapp.message.tree</field>
        <field name="model">whatsapp.message</field>
        <field name="arch" type="xml">
            <tree string="Messages WhatsApp" decoration-success="status == 'sent' or status == 'delivered' or status == 'read'" decoration-danger="status == 'error'" decoration-info="status == 'received'">
                <field name="create_date"/>
                <field name="direction"/>
                <field name="conversation_id"/>
                <field name="contact_id"/>
                <field name="phone"/>
                <field name="message_type"/>
                <field name="status" widget="badge" decoration-success="status in ('sent', 'delivered', 'read')" decoration-danger="status == 'error'" decoration-info="status == 'received'"/>
                <field name="wa_status"/>
                <field name="wa_message_id"/>
                <field name="content"/>
                <button name="action_reply_message" 
                        string="Répondre" 
                        type="object" 
                        icon="fa-reply"
                        attrs="{'invisible': [('direction', '!=', 'in')]}"
                        class="btn-primary"/>
            </tree>
        </field>
    </record>

    <record id="view_whatsapp_message_form" model="ir.ui.view">
        <field name="name">whatsapp.message.form</field>
        <field name="model">whatsapp.message</field>
        <field name="arch" type="xml">
            <form string="Message WhatsApp">
                <header>
                    <button name="action_reply_message" 
                            string="Répondre" 
                            type="object" 
                            class="oe_highlight"
                            icon="fa-reply"
                            attrs="{'invisible': [('direction', '!=', 'in')]}"
                            help="Répondre à ce message"/>
                </header>
                <sheet>
                    <group>
                        <field name="direction"/>
                        <field name="conversation_id"/>
                        <field name="contact_id"/>
                        <field name="phone"/>
                        <field name="contact_name"/>
                        <field name="message_type"/>
                        <field name="status"/>
                    </group>
                    <group string="Résultat de l'envoi">
                        <field name="status" widget="badge" decoration-success="status in ('sent', 'delivered', 'read')" decoration-danger="status == 'error'" decoration-info="status == 'received'"/>
                        <field name="wa_status" readonly="1"/>
                        <field name="wa_message_id" readonly="1"/>
                        <field name="wa_conversation_id" readonly="1"/>
                        <field name="config_id"/>
                    </group>
                    <group string="Diagnostic" attrs="{'invisible': [('error_help', '=', False)]}">
                        <field name="error_help" widget="text" nolabel="1" readonly="1"/>
                    </group>
                    <group string="Contenu">
                        <field name="content" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Réponse API" name="api_response">
                            <group>
                                <field name="raw_response" widget="text" nolabel="1" readonly="1"/>
                            </group>
                        </page>
                        <page string="Payload envoyé" name="payload">
                            <group>
                                <field name="raw_payload" widget="text" nolabel="1" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
